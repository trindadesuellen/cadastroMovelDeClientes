<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="suellen.br.ifsul.cadastromovelclientes.TipoForm">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Criar Formulário"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#ff6ca9ff"
        android:onClick="criarFormulario"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="70dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Formulários Salvos"
        android:id="@+id/button2"
        android:layout_marginTop="220dp"
        android:background="#ff6ca9ff"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="formSalvos"

        android:layout_marginLeft="70dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Usuários"
        android:id="@+id/button3"
        android:layout_marginTop="300dp"
        android:background="#ff6ca9ff"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="usuarios"
        android:layout_marginLeft="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cadastro de Clientes"
        android:id="@+id/textView2"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#ff6ca9ff"
        android:paddingTop="25dp"
        android:paddingLeft="45dp" />

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">


    </android.support.design.widget.AppBarLayout>





</android.support.design.widget.CoordinatorLayout>
